# RAILWAY PRODUCTION ENVIRONMENT
# Untuk deploy di Railway.app
# JANGAN commit file ini ke GitHub!

# ========================================
# APPLICATION SETTINGS
# ========================================
APP_NAME="TikTok Analysis"
APP_ENV=production
APP_KEY=base64:RugGiCP+abQZ4U1hSSNnN2N3j4vT6nA4qLQis4VjpU0=
APP_DEBUG=false
APP_URL=https://your-app-name.up.railway.app

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

# ========================================
# LOGGING SETTINGS - PRODUCTION
# ========================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ========================================
# DATABASE SETTINGS - RAILWAY POSTGRESQL
# ========================================
# Railway PostgreSQL database variables
DB_CONNECTION=pgsql
DB_HOST=${PGHOST}
DB_PORT=${PGPORT}
DB_DATABASE=${PGDATABASE}
DB_USERNAME=${PGUSER}
DB_PASSWORD=${PGPASSWORD}
# DB_PASSWORD=${RAILWAY_POSTGRES_PASSWORD}
# DB_SSLMODE=require

DB_FOREIGN_KEYS=true

# ========================================
# SESSION SETTINGS
# ========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ========================================
# BROADCAST SETTINGS
# ========================================
BROADCAST_CONNECTION=log

# ========================================
# FILESYSTEM SETTINGS - RAILWAY
# ========================================
# Gunakan S3 untuk production file storage
FILESYSTEM_DISK=s3

# AWS S3 Settings untuk Railway
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=${AWS_BUCKET}
AWS_URL=${AWS_URL}
AWS_ENDPOINT=${AWS_ENDPOINT}
AWS_USE_PATH_STYLE_ENDPOINT=false

# ========================================
# QUEUE SETTINGS
# ========================================
QUEUE_CONNECTION=database

# ========================================
# CACHE SETTINGS - PRODUCTION
# ========================================
CACHE_STORE=redis
CACHE_PREFIX=tiktok_analysis_

# ========================================
# REDIS SETTINGS - RAILWAY
# ========================================
REDIS_HOST=${RAILWAY_REDIS_HOST}
REDIS_PASSWORD=${RAILWAY_REDIS_PASSWORD}
REDIS_PORT=${RAILWAY_REDIS_PORT}

# ========================================
# MAIL SETTINGS - PRODUCTION
# ========================================
# Gunakan service SMTP (SendGrid, Mailgun, etc.)
MAIL_MAILER=smtp
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=apikey
MAIL_PASSWORD=${SENDGRID_API_KEY}
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# ========================================
# SECURITY SETTINGS
# ========================================
SANCTUM_STATEFUL_DOMAINS=your-app-name.up.railway.app
SANCTUM_ENCRYPTION_KEY=${APP_KEY}

# ========================================
# OPTIONAL: THIRD PARTY SERVICES
# ========================================
# TikTok API (jika ada)
# TIKTOK_API_KEY=
# TIKTOK_API_SECRET=

# Stripe (jika ada payment)
# STRIPE_PUBLIC_KEY=
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=

# ========================================
# IMPORTANT NOTES
# ========================================
# 1. Jangan commit file ini ke GitHub
# 2. Set environment variables di Railway console
# 3. Gunakan strong APP_KEY
# 4. Pastikan database connection benar
# 5. Enable HTTPS di Railway
# 6. Monitor logs di Railway console
# 7. Setup backups untuk database
