{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "php artisan serve --host=0.0.0.0 --port=8000",
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 3
  },
  "variables": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "DB_CONNECTION": "pgsql",
    "LOG_LEVEL": "warning"
  }
}
