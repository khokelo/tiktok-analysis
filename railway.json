{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "php artisan serve --host=0.0.0.0 --port=$PORT",
    "restartPolicyType": "on_failure",
    "restartPolicyMaxRetries": 3,
    "healthcheckPath": "/",
    "healthcheckInterval": 30,
    "healthcheckTimeout": 10
  },
  "variables": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "LOG_LEVEL": "warning"
  }
}
